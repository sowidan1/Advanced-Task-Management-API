                    "due_date",
                    "priority",
                    "status"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Buy groceries"
                    },
                    "due_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-30"
                    },
                    "priority": {
                        "type": "string",
                        "example": "high"
                    },
                    "status": {
